  <script>
    function calculateGrade() {
      var mathMarks = Number(document.getElementById("math").value);
      var socialMarks = Number(document.getElementById("social").value);
      var scienceMarks = Number(document.getElementById("science").value);
      var computerMarks = Number(document.getElementById("computer").value);
      var engMarks = Number(document.getElementById("eng").value);

      var total = mathMarks + socialMarks + scienceMarks + computerMarks + engMarks;
      document.getElementById("total").innerHTML = total;

      var percentage = (total / 500) * 100;
      document.getElementById("percentage").innerHTML = percentage.toFixed(2) + "%";
    }
  </script>

