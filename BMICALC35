 <script>
function calcBMI(){
  var weight = Number(document.getElementById("weight").value);
  var height = Number(document.getElementById("height").value);

  if(height <= 0 || weight <= 0) {
    document.getElementById("bmi").innerHTML = "Invalid";
    document.getElementById("cat").innerHTML = "Check values";
    return;
  }

  var bmi = weight / (height * height);
  document.getElementById("bmi").innerHTML = bmi.toFixed(2);

  if (bmi < 18.5) {
    document.getElementById("cat").innerHTML = "Underweight";
  } else if (bmi >= 18.5 && bmi <= 24.9) {
    document.getElementById("cat").innerHTML = "Normal";
  } else if (bmi >= 25 && bmi <= 29.9) {
    document.getElementById("cat").innerHTML = "Overweight";
  } else if (bmi >= 30 && bmi <= 34.9) {
    document.getElementById("cat").innerHTML = "Obese";
  } else if (bmi > 35) {
    document.getElementById("cat").innerHTML = "Extremely Obese";
  } else {
    document.getElementById("cat").innerHTML = "-";
  }
}
</script>

